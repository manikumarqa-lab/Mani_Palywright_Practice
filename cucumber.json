{
    "default": {
       "tags": "@Method",
        "dryRun": false,
        "formatOptions": {
            "snippetInterface": "async-await"
        },
        "paths": [
            "PlaywrightAutomationCode/FeatureFiles/**/*.feature"     

        ],
        "require": [
            "PlaywrightAutomationCode/StepDefinition/**/*.ts",
            "PlaywrightAutomationCode/StepDefinition/**/*.js"
        ],
        "requireModule": [
            "ts-node/register"
        ],
        "format": [              
            "progress-bar",
            "html:test-result/cucumber-report.html",
            "json:test-result/cucumber-report.json",
            "rerun:@rerun.txt"
        ],
        "parallel": 0        
   }
}

